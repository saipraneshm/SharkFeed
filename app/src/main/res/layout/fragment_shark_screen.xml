<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.android.yahoo.sharkfeed.fragment.SharkScreenFragment">


    <ImageView
        android:id="@+id/shark_feed_background_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/img_ocean"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/shark_feed_logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/img_sharkfeed_logo"/>
        <ImageView
            android:id="@+id/shark_feed_text_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_sharkfeed_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="4dp"
            android:background="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:text="Swipe left to start feeding"
                />
            <ImageView
                android:id="@+id/swipe_to_refresh_image"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:paddingEnd="8dp"
                android:paddingStart="4dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_swipe_to_feed"
                />
        </LinearLayout>

    </LinearLayout>




</FrameLayout>
